{
  "verbose": true,
  "debug": true,
  "exec": "ts-node -r tsconfig-paths/register ./main.ts --files",
  "ignore": [
    "node_modules",
    "./test",
    "**/*.d.ts",
    "*.test.ts",
    "*.spec.ts",
    "fixtures/*",
    "test/**/*",
    "docs/*"
  ],
  "events": {
    "restart": ""
  },
  "watch": ["./**"],
  "ext": "ts js",
  "inspect": true
}
