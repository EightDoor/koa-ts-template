{
  "include": ["./src/**/*", "./main.ts"],
  "exclude": ["dist", "log", "node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    // 编译后的js 使用es5规范
    "target": "ES5",
    // 编译后的js 使用commonjs规范
    "module": "commonjs",
    "sourceMap": false,
    "lib": ["ESNext"],
    "outDir": "./dist",
    // 是否对js进行编译
    "allowJs": true,
    // 是否检查js代码是否符合规范
    "checkJs": false,
    "removeComments": false,
    "noEmit": false,
    // 当有错误时，不产生编译文件
    "noEmitOnError": true,
    // 开启严格模式
    "strict": true,
    // 用来设置编译后的文件是否使用严格模式，默认是false
    "alwaysStrict": true,

    // 不允许使用隐式any
    "noImplicitAny": true,
    // 不允许使用不明确的this
    "noImplicitThis": true,
    // 严格的空值检查
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./global.d.ts"],
    "allowSyntheticDefaultImports": true
  }
}
